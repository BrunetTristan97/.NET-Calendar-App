@model List<EventModel>
@{
    <div class="events">
        <div class="left-panel">
            <h3>List of events</h3>
            <ul class="event-list">
                @foreach (var evt in Model)
                {
                    <li class="event-item" data-event-id="@evt.Id">
                        @evt.Name
                    </li>
                }
            </ul>
            <button class="btn-secondary" id="add-event">New Event</button>
        </div>
        <div class="right-panel event-details">
            <h3 id="event-name">Add new event</h3>
            <input type="hidden" id="_selected-event-id"/>


            <div class="input-group">
                <label for="input-name">Name</label>
                <input type="text" class="event-input form-control" id="input-name" />
            </div>
            <div class="input-group">
                <label for="input-date">Date</label>
                <input type="date" disabled class="event-input form-control" id="input-date" />
            </div>
            <div class="input-group">
                <label for="input-start">Start Time</label>
                <input type="time" class="event-input form-control" id="input-start" placeholder="Start Time" />
            </div>
            <div class="input-group">
                <label for="input-end">End Time</label>
                <input type="time" class="event-input form-control" id="input-end" />
            </div>

            <label for="input-desc">Description</label>
            <textarea class="event-input form-control" id="input-desc"></textarea>

            <input type="submit" id="input-submit" class="btn-secondary" value="Create Event"/>
        </div> 
    </div>

}
