@model List<EventModel>
@{
    <div class="events">
        <div class="left-panel">
            <ul class="event-list">
                @foreach (var eventItem in Model)
                {
                    <li class="event-item" id="@eventItem.Id">eventItem.Name</li>
                }
                <li class="event-item">
                    <button class="btn btn-primary" id="addEventButton">Add Event</button>
                </li>
            </ul>
        </div>
        <div class="right-panel">
            <h3 id="event-name">Add new event</h3>
            <input type="hidden" id="_selected-event-id"/>
            
            <input type="text" id="input-name" placeholder="Event Name" />
            <input type="text" id="input-date" placeholder="Date" />
            <input type="text" id="input-desc" placeholder="Description" />
            <input type="text" id="input-start" placeholder="Start Time" />
            <input type="text" id="input-end" placeholder="End Time" />
        </div>
    </div>

}
