@model CalendarModel
@{
    <div class="calendar">
        <input type="hidden" id="_datetime" value="@Model.SelectedDate.ToString("yyyy-MM-dd")" />
        <div class="month-selector">
            <input type="button" class="btn" id="btnPrev" value="Previous" />
            <span id="monthName">@Model.SelectedMonthName</span>
            <input type="button" class="btn" id="btnNext" value="Next" />
        </div>
        <div class="calendar-rows">
            <div class="board-rows">
                @for (int i = 0; i < Model.Rows.Length; i++)
                {
                    <div class="square">
                        <span>@Html.DisplayFor(model => model.Rows[i])</span>
                    </div>
                }
            </div>
        </div>
    </div>
}

