@model CalendarModel
@{
        <div class="calendar">
            <div class="calendar-rows">
                <div class="board-rows">
                    @for (int i = 0; i < Model.Rows.Length; i++)
                    {
                        <div class="square">
                            <span>@Html.DisplayFor(model => model.Rows[i])</span>
                        </div>
                    }
                </div>
            </div>
        </div>
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $("#btnPrev").click(function (e) {
        e.preventDefault();
        updateMonth(@Model.SelectedDate.AddMonths(-1))
    });

    $("#btnNext").click(function (e) {
        e.preventDefault();
        updateMonth(@Model.SelectedDate.AddMonths(1))
    });

    function updateMonth(month) {
        $.ajax({
            method: "GET",
            url: '@Url.Action("GetMonth", "Calendar")',
            data: { month: month }
        }).done(function (data) {
            $()
        });
    }
</script>
